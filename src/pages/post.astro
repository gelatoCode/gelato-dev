---
import Posts from '../layouts/Post.astro';
import Card from '../components/Card.astro';

import { getCollection } from 'astro:content';

const posts = await getCollection('post');
---

<Posts>
  {
    posts.map((x) => (
      <Card
        title={x.data.title}
        pubDate = {x.data.pubDate}
        slug = {x.slug}
      />
    ))
  }
</Posts>